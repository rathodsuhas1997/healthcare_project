									"userProperties": [],
									"linkedServiceName": {
										"referenceName": "LS_HEALTHCARE_SQL_CONFIG",
										"type": "LinkedServiceReference"
									},
									"typeProperties": {
										"scripts": [
											{
												"type": "Query",
												"text": {
													"value": "UPDATE [healthcare].[pipeline_run_status] SET [is_last_run_completed] = 0, [added_by] = '@{variables('masterPipelineRunID')}' WHERE [pipeline_name] = 'API_Master_PL'",
													"type": "Expression"
												}
											}
										],
										"scriptBlockExecutionTimeout": "02:00:00"
									}
								},
								{
									"name": "Execute Ingestion Pipeline",
									"type": "ExecutePipeline",
									"dependsOn": [
