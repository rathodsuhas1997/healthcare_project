										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"variableName": "masterPipelineRunID",
										"value": {
											"value": "@pipeline().RunId",
											"type": "Expression"
										}
									}
								},
								{
									"name": "Update is_last_run_completed to 0",
									"type": "Script",
									"dependsOn": [
										{
											"activity": "Set Pipeline Start Time",
											"dependencyConditions": [
												"Succeeded"
											]
										}
