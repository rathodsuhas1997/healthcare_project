									"typeProperties": {
										"scripts": [
											{
												"type": "Query",
												"text": {
													"value": "UPDATE [healthcare].[pipeline_run_status] SET [is_last_run_completed] = 1, [added_by] = '@{variables('masterPipelineRunID')}' WHERE [pipeline_name] = 'API_Master_PL'",
